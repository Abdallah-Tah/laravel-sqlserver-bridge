{
    "name": "amohamed/laravel-sqlserver-bridge",
    "description": "SQL Server driver for Laravel using a .NET bridge - Compatible with PHP 8.4+",
    "keywords": [
        "laravel",
        "sql server",
        "database",
        "sqlsrv",
        "php 8.4",
        "bridge"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Abdallah Mohamed",
            "email": "abdal_cascad@hotmail.com"
        }
    ],
    "require": {
        "php": "^8.2|^8.3|^8.4",
        "illuminate/database": "^11.0",
        "illuminate/support": "^11.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0",
        "phpunit/phpunit": "^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "Amohamed\\LaravelSqlServerBridge\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Amohamed\\LaravelSqlServerBridge\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Amohamed\\LaravelSqlServerBridge\\SqlServerBridgeServiceProvider"
            ],
            "aliases": {}
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
